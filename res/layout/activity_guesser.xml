<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgNormal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.fidde.nonsense.MainActivity$PlaceholderFragment" >

    <fragment
        android:id="@+id/fragment_picturesPanel"
        android:name="se.fidde.nonsense.fragment.guesser.GuesserPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_guesser_pictures" />

    <fragment
        android:id="@+id/fragment_infoPanel"
        android:name="se.fidde.nonsense.fragment.writer.WriterWordlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_guesser_textfield" />

</RelativeLayout>